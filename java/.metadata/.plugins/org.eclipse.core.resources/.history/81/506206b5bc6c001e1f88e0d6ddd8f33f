package chap05_array;

public class _02_ArrayExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 1. 10개 정수형 배열을 생성하고 3의 배수만 10개를 저장하세요.
		
		int[] three = new int[10];
		
		for(int a = 0; a <= three.length; a++) {
			three[a] = a + 1;
				if(three[a] % 3 == 0) {
					System.out.println(three[a]);
			}
		}
		int num = 0;
		int index = 0;
		
		while(index < three.length) {
			num++;
			if(num % 3 == 0) {
				three[index++] = num;
			}
		}

	}

}
