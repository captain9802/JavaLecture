package chap07_class.circle;

public class Circle {
	
	// 2. 반지름 int radius
	int radius;
	
	// 3. 기본생성자 1개와 radius를 받아서 초기화하는 생성자 1개
	public Circle() {		
	}
	
	public Circle(int radius) {		
	}
	
	
	
	// 4. 원의 둘래를 계산해서 double형으로 리턴하는 메소드 1개(2 * PI * radius)
	// 매개변수 없이
	public double round() {
		return double(2 * PI * radius)
	}
	
	// 5. 원의 넓이를 계산해서 double형으로 리턴하는 메소드 1개(PI * radius * radius)
	// 매개변수 없이
	
	public double area() {
		return double(PI * radius * radius)
	}
	
	
	
	
	

}
