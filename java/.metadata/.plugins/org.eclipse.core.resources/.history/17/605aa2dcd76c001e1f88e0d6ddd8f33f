package chap05_array;

import java.util.Scanner;

public class _homework2_ {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 사용자가 입력한 금액을 오만원권, 만원권, 오천원권, 천원권, 500원동전, 100원동전, 50원동전, 10원동전, 1원동전 각 몇개로 변환되는지 출력하세요.
		// 출력 개수는 단위가 큰 것 순서로 계산합니다
		// 예를 들어 78670원이면 <오만원 1매, 만원 2매, 오천원 1매, 천원 3매, 500원 1개, 100원 1개, 50원 1개, 10원 2개> 입니다.
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("원하시는 금액을 입력해주세요.");
		
		
	
		
		int omanCnt;
		int manCnt;
		int ocheonCnt;
		int cheonCnt;
		int obakCnt;
		int bakCnt;
		int oshipCnt;
		int shipCnt;
		
		


		
		System.out.println("원하시는 금액을 입력해주세요.");
		int i = 0;
		
		while(true) {		
		int user = sc.nextInt();
		
		
		omanCnt = user / 50000;					
		manCnt = user / 10000;		
		ocheonCnt = user / 5000;
		cheonCnt = user / 1000;
		obakCnt = user / 500;
		bakCnt = user / 100;
		oshipCnt = user / 50;
		shipCnt = user / 10;
				System.out.println("오만원 : " + omanCnt + " 만원 : " + manCnt + " 오천원 : " + ocheonCnt + " 천원 : " + cheonCnt + " 오백원 : " + obakCnt + " 백원 : " + bakCnt + " 오십원 : " + oshipCnt + " 십원 : " + shipCnt);
		}
		
		
	}
	
	
	

}
